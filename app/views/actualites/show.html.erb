<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "ps.jpg" %>');">
  <div class="banner-content">
    <h1><%= @actualite.name %></h1>
    <p><%= @actualite.tagline %></p>
    <% if @actualite.url %>
    <p><%= link_to @actualite.url, @actualite.url, class: "btn btn-primary btn-lg" %></p>
    <% end %>
    <span class="label label-default"><%= @actualite.classification %></span>


  </div>
</div>


