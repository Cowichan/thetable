<%= simple_form_for @actualite do |f| %>
  <%= f.input :name, placeholder: "programmation", label: "Quelle prog ?" %>

  <%= f.input :tagline, placeholder: "Descr...", label: "Quel desc ?" %>

  <%= f.input :url, placeholder: "http://google.com", label: "Quel url ?" %>
  <%= f.input :classification, collection: ["cinema", "debat", "musique"], prompt: "wich category ?" %>

  <%= f.button :submit, "Ajouter", class: "btn btn-primary" %>
<% end %>
